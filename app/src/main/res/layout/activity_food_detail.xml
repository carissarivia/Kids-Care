<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FoodDetailActivity"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back Button and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:contentDescription="@string/back_icon_description"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/foods"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <!-- Recipe Image -->
        <ImageView
            android:id="@+id/recipeImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_recipe_image_1"
            android:contentDescription="@string/recipe_image_description"
            android:layout_marginBottom="16dp" />

        <!-- Recipe Title -->
        <TextView
            android:id="@+id/tvRecipeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/baked_honey_mustard_chicken"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Recipe Ratings -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_star"
                android:contentDescription="@string/star_icon_description"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tvRecipeRatings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recipe_ratings"
                android:textColor="@color/colorTextSecondary"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Recipe Description -->
        <TextView
            android:id="@+id/tvRecipeDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This honey mustard chicken is quick and easy to prepare, and the kids love it, too!"
            android:textColor="@color/colorTextSecondary"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Nutrition Facts -->
        <TextView
            android:id="@+id/tvNutritionFactsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nutrition Facts"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvNutritionFactsNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*Nutrient information is not available for all ingredients. Amount is based on available nutrient data."
            android:textColor="@color/colorTextSecondary"
            android:textSize="12sp"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="232"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Calories"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextSecondary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4g"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fat"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextSecondary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25g"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carbs"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextSecondary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26g"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Protein"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextSecondary" />
            </LinearLayout>
        </LinearLayout>

        <!-- Ingredients Title -->
        <TextView
            android:id="@+id/tvIngredientsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ingredients"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="8dp" />

        <!-- Ingredients List -->
        <TextView
            android:id="@+id/tvIngredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="• cooking spray\n• 6 skinless, boneless chicken breast halves\n• salt and pepper to taste\n• ½ cup honey\n• ½ cup prepared mustard\n• 1 teaspoon dried basil\n• 1 teaspoon paprika\n• ½ teaspoon dried parsley"
            android:textColor="@color/colorTextSecondary"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Directions Title -->
        <TextView
            android:id="@+id/tvDirectionsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Directions"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="8dp" />

        <!-- Directions Text -->
        <TextView
            android:id="@+id/tvDirections"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Preheat oven to 350 degrees F (175 degrees C). Lightly grease a baking dish.\n2. Place chicken breast halves in the baking dish, and brush with the honey mustard mixture. Sprinkle with basil, paprika, and parsley.\n3. Bake chicken 25 minutes in the preheated oven, or until juices run clear. Remove chicken from pan, and set aside. Stir together the pan drippings and cornstarch until thickened, about 1 minute. Serve sauce over chicken."
            android:textColor="@color/colorTextSecondary"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnRate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/rate"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/save"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
